{
  "name": "arlinkauth",
  "version": "0.2.0",
  "description": "Authentication SDK for Arweave apps - OAuth login with automatic wallet generation. Works in Browser and Node.js.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "arlinkauth": "./dist/bin/arlinkauth.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/bin/arlinkauth.js",
    "dev": "tsc --watch --preserveWatchOutput",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "arweave",
    "auth",
    "oauth",
    "wallet",
    "ao",
    "arlink",
    "cli"
  ],
  "author": "Ankush Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ankushKun/arlinkauth.git"
  },
  "bugs": {
    "url": "https://github.com/ankushKun/arlinkauth/issues"
  },
  "homepage": "https://github.com/ankushKun/arlinkauth#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19",
    "typescript": "^5"
  }
}
